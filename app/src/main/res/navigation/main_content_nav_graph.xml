<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content_nav_graph"
    app:startDestination="@id/homeFragment2">

    <fragment
        android:id="@+id/homeFragment2"
        android:name="com.ua.epam.ctiptocurrencytracker.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/marketFragment3"
        android:name="com.ua.epam.ctiptocurrencytracker.fragments.MarketFragment"
        android:label="fragment_market"
        tools:layout="@layout/fragment_market" >
        <action
            android:id="@+id/action_marketFragment3_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment3"
        android:name="com.ua.epam.ctiptocurrencytracker.fragments.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.ua.epam.ctiptocurrencytracker.fragments.DetailFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="data"
            app:argType="com.ua.epam.ctiptocurrencytracker.model.CurrencyRateUiModel"
            app:nullable="true" />
    </fragment>
</navigation>